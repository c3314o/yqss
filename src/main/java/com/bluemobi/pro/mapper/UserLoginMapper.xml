<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bluemobi.pro.entity.UserLogin">
	
	<resultMap type="com.bluemobi.pro.entity.UserLogin" id="userLoginResultMap">
		<id column="id" property="" />
		<result column="username" property="username" />
		<result column="password" property="password" />
	</resultMap>
	
	<!-- 根据条件查询用户登录信息 -->
	<select id="findOne" parameterType="com.bluemobi.pro.entity.UserLogin" resultMap="userLoginResultMap" 
					useGeneratedKeys="true"  keyProperty="id" >
		SELECT
			t.id,
			t.username,
			t.password
		FROM
			users_login t
		WHERE
			1 = 1
		<if test="id != null and id != ''">
			AND 
				t.id = #{id}
		</if>
		<if test="username != null and username != ''">
			AND
				t.username = #{username}
		</if>
	</select>
	
	<!-- 用户注册 -->
	<insert id="insert" parameterType="com.bluemobi.pro.entity.UserLogin">
		INSERT INTO
			users_login
		(
			t.username,
			t.password,
			t.create_date
		)
		VALUES
		(
			#{username},
			#{password},
			NOW()
		)
	</insert>
	
	<!-- 修改登录信息密码 -->
	<upadte id="update" parameterType="com.bluemobi.pro.entity.UserLogin">
		UPDATE
			users_login
		<set>
			<if test="password != null and password != ''">
				password = #{password}
			</if>
		</set>
		WHERE
			id = #{id}
	</upadte>
</mapper> 